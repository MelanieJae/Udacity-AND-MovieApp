<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/poster_image"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:contentDescription="image of movie promotional poster"/>
    <ImageButton
        android:id="@+id/favorite_toggle"
        android:src="@drawable/ic_toggle"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/poster_image"
        android:layout_alignRight="@id/poster_image"
        android:background="@android:color/transparent"
        android:contentDescription="image of star that can toggle between an outlined star and a solid star"/>
</RelativeLayout>


